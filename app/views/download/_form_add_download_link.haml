%form{action: '/download', method: :post}
  .group
    %label Label
    %input{name: 'download_link[label]', placeholder: "Label"}
    .clear

  .group
    %label Link
    %input{name: 'download_link[link]', placeholder: "Link"}
    .clear

  .group
    %label Type
    %span= params[:t].titleize
    %input{name: 'download_link[link_type]', type:"hidden", value: params[:t]}
    .clear

  .group
    %label 
    %input{type: 'submit', value: "Submit"}
    .clear
