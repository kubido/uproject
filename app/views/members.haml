.header
  = partial '/partials/header'
.body
  = partial '/partials/sidebar_left'
  .sidebar-right
    %table.members
      %thead
        %th{width: '4%'} No.
        %th{width: '76%'} Username
        %th{width: '10%'} Profil
        %th{width: '10%'} Matrikulasi
      %tbody
        - User.all.each_with_index do |u, i|
          %tr
            %td= "#{i+1}."
            %td
              %a{href: "http://facebook.com/#{u.username}"}= u.username
            %td.wrapper
              - if u.profile.present?
                .profile{id: "profile-#{u.id}"}
                  %img{src: "http://graph.facebook.com/#{u.uid}/picture"}
                  %span= "Angkatan #{u.profile.angkatan}"
                  %span= display_status_mahasiswa(u.profile.semester)
                  %span= "Nim #{u.profile.nim}"
              .checklist{class: u.profile.present? ? "true" : "false"}
            %td
              .checklist{class: u.survei.present? ? "true" : "false"}
  .clear
  